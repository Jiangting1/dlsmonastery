<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.myspring.basic.modules.hr.mapper.PositionMapper">

    <select id="findPage" resultType="PositionDto">
        select
        t1.*
        from
        hr_position t1
        where
        t1.enabled=1
        <if test="p.name != null">
            and t1.name like concat(concat('%',#{p.name}),'%')
        </if>
    </select>

    <select id="findByNameLike" resultType="Position">
        select
        t1.*
        from
        hr_position t1
        where
        t1.enabled=1
        <if test="name != null">
            and (t1.name like CONCAT('%',#{name},'%'))
        </if>
    </select>

</mapper>
