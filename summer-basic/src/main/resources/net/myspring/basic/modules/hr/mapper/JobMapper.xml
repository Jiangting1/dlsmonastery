<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.myspring.basic.modules.hr.mapper.JobMapper">

    <select id="findPage" resultType="Job">
        SELECT t1.*
        FROM hr_job t1
        where t1.enabled=1
        <if test="p.name!=null">
            and t1.name like concat('%',#{p.name},'%')
        </if>
    </select>
</mapper>
