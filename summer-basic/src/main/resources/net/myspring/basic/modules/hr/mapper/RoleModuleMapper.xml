<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.myspring.basic.modules.hr.mapper.RoleModuleMapper">

    <select id="findByPositionId" resultType="RoleModule">
        SELECT t1.*
        FROM  sys_role_module t1
        where t1.enabled=1
        and t1.position_id=#{positionId}
    </select>

    <delete id="deleteByRoleId">
        DELETE  from sys_role_module where role_id=#{roleId}
    </delete>
</mapper>
