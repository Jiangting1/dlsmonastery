<import src="/page/template/pageable/pageable" />
<view class="page">
  <form wx:if="{{!searchHidden}}" bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title form_bd">
      <input type="hidden" name="page" value="{{formData.page}}" class="hidden" />
      <input type="hidden" name="Size" value="{{formData.size}}" class="hidden" />
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">开始日期</view>
        </view>
        <view class="weui-cell__bd ">
          <picker mode="date" name="createdDateStart" value="{{formData.createdDateStart}}" data-name="createdDateStart" bindchange="bindDateChange">
            <view class="weui-input">{{formData.createdDateStart}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">结束日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" name="createdDateEnd" value="{{formData.createdDateEnd}}" data-name="createdDateEnd" bindchange="bindDateChange">
            <view class="weui-input">{{formData.createdDateEnd}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input" bindtap="showError" data-key="type">
        <view class="weui-cell__hd">
          <view class="weui-label">办事处</view>
        </view>
        <view class="weui-cell__bd" style="overflow:hidden">
          <picker name="areaId" range="{{formProperty.areaList}}" range-key="name" value="{{formData.area.id}}" bindchange="bindArea">
            <view class="weui-input">{{formData.area.name}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">仓库</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="storeId" range="{{formProperty.storeList}}" range-key="name" value="{{formData.store.id}}" bindchange="bindStore">
            <view class="weui-input">{{formData.store.name}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">门店</view>
        </view>
        <view class="weui-cell__bd">
          <input name="shopName" class="weui-input" placeholder="模糊搜索" value="{{formData.shopName}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">状态</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="status" range="{{formProperty.statusList}}" value="{{formData.status}}" bindchange="bindStatus">
            <view class="weui-input">{{formData.status}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">发货类型</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="shipType" range="{{formProperty.shipList}}" value="{{formData.shipType}}" bindchange="bindShipType">
            <view class="weui-input">{{formData.shipType}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">网络类型</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="netType" range="{{formProperty.netList}}" value="{{formData.netType}}" bindchange="bindNetType">
            <view class="weui-input">{{formData.netType}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
      <button formType="submit" class="weui-btn" type="primary">确定</button>
    </view>
  </form>
  <view class="page__bd">
    <view class="weui-panel">
      <template is="searchHeader" />
      <view class="weui-panel__bd panel_bd">
        <view class="weui-media-box weui-media-box_text" wx:for="{{page.content}}" wx:key="id" data-id="{{item.id}}" bindlongtap="showActionSheet" bindtouchstart="itemActive">
          <view class="weui-media-box__title weui-media-box__title_in-text">{{item.businessId}}-{{item.shop.name}}</view>
          <view class="weui-media-box__desc item_style">仓库:{{item.store.name}}</view>
          <view class="weui-media-box__desc item_style">门店类型:{{item.shopType}}</view>
          <view class="weui-media-box__desc item_style">发货类型:{{item.shipType}}</view>
          <view class="weui-media-box__desc item_style">状态:{{item.status}}</view>
          <view class="weui-media-box__desc item_style">快递单号:{{item.expressCodes}}</view>
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta">{{item.lastModifiedDate}}</view>
            <image wx:if="{{item.active}}" src="/image/icons/action.png" class="pageable_list_item_active"></image>
          </view>
        </view>
      </view>
    </view>
  </view>
  <template is="footer" data="{{page}}" />
</view>