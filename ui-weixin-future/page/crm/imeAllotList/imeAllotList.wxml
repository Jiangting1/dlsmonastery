<import src="/page/template/pageable/pageable" />
<view class="page">
  <form class="{{searchHidden?'hidden':''}}" bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title form_bd">
      <input type="hidden" name="pageNumber" value="{{formData.pageNumber}}" class="hidden" />
      <input type="hidden" name="pageSize" value="{{formData.pageSize}}" class="hidden" />
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">是否跨区域</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="crossArea" range="{{formProperty.crossAreaList}}" range-key="name" value="{{formData.crossArea.value}}" bindchange="changeCrossArea">
            <view class="weui-input">{{formData.crossArea.name}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">状态</view>
        </view>
        <view class="weui-cell__bd">
          <picker name="status" range="{{formProperty.statusList}}" value="{{formData.status}}" bindchange="changeStatus">
            <view class="weui-input">{{formData.status}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">调拨前</view>
        </view>
        <view class="weui-cell__bd">
          <input name="fromShopName" class="weui-input" placeholder="模糊搜索" value="{{fromData.fromShopName}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">调拨后</view>
        </view>
        <view class="weui-cell__bd">
          <input name="toShopName" class="weui-input" placeholder="模糊搜索" value="{{fromData.toShopName}}" />
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
      <button formType="submit" class="weui-btn" type="primary">确定</button>
    </view>
  </form>
  <view class="page__bd">
    <view class="weui-panel">
      <template is="header" />
      <view class="weui-panel__bd panel_bd">
        <view class="weui-media-box weui-media-box_text" wx:for="{{page.content}}" wx:key="id" data-id="{{item.id}}" data-status="{{item.status}}" bindlongtap="showActionSheet" bindtouchstart="itemActive">
          <view class="weui-media-box__title weui-media-box__title_in-text">{{item.productIme.ime}}</view>
          <view class="weui-media-box__desc item_style">产品名称:{{item.productIme.product.name}}</view>
          <view class="weui-media-box__desc item_style">调拨人:{{item.created.fullName}}</view>
          <view class="weui-media-box__desc item_style">调拨前:{{item.fromDepot.name}}</view>
          <view class="weui-media-box__desc item_style">调拨后:{{item.toDepot.name}}</view>
          <view class="weui-media-box__desc item_style">状态:{{item.status}}</view>
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta">创建时间:{{item.createdDate}}</view>
            <image wx:if="{{item.active}}" src="/image/icons/action.png" class="pageable_list_item_active"></image>
          </view>
        </view>
      </view>
    </view>
  </view>
  <template is="footer" data="{{page}}" />
</view>