@import 'style/weui.wxss';

page {
  background-color: #ebebeb;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.panel_bd {
  position: relative;
  width: 742rpx;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}

.form_bd {
  margin-top: 42rpx;
}

.item_style {
  margin-top: 16rpx;
}

.hidden {
  display: none;
}
.right_icon{
  position: absolute;
  width:32rpx;
  height:32rpx;
  right:20rpx;
  top:28rpx;
}

.weui-uploader__bd .weui-cell__ft {
  position: absolute;
  right: 30rpx;
  top: 100rpx;
}

.weui-cell__ft icon .warn {
  size: 23;
  color:#E64340;
}


.alert {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
}

.alert h4 {
  margin-top: 0;
  color: inherit;
}

.alert .alert-link {
  font-weight: bold;
}

.alert > p, .alert > ul {
  margin-bottom: 0;
}

.alert-dismissable, .alert-dismissible {
  padding-right: 35px;
}

.alert-dismissable .close, .alert-dismissible .close {
  position: relative;
  top: -2px;
  right: -21px;
  color: inherit;
}

.alert-success {
  color: #3c763d;
  background-color: #dff0d8;
  border-color: #d6e9c6;
}

.alert-success hr {
  border-top-color: #c9e2b3;
}

.alert-success .alert-link {
  color: #2b542c;
}

.alert-info {
  color: #31708f;
  background-color: #d9edf7;
  border-color: #bce8f1;
}

.alert-info hr {
  border-top-color: #a6e1ec;
}

.alert-info .alert-link {
  color: #245269;
}

.alert-warning {
  color: #8a6d3b;
  background-color: #fcf8e3;
  border-color: #faebcc;
}

.alert-warning hr {
  border-top-color: #f7e1b5;
}

.alert-warning .alert-link {
  color: #66512c;
}

.alert-danger {
  color: #a94442;
  background-color: #f2dede;
  border-color: #ebccd1;
}

.alert-danger hr {
  border-top-color: #e4b9c0;
}

.alert-danger .alert-link {
  color: #843534;
}


.input_border{
  margin-left:30rpx;
  height: 1rpx;
}
/** table **/
.table{
border:1rpx solid #dadada;
border-right: 0;
border-bottom: 0;
width: 100%;
}
.tr , .inner_tr{
width: 100%;
display: flex;
justify-content: space-between;
word-break:break-all;
word-wrap:break-word;
}

.th,.td {
padding: 10rpx;
border-bottom: 1rpx solid #dadada;
border-right: 1rpx solid #dadada;
text-align: center;
width:100%;
}

.th {
font-weight: 400;
}

.rowspan:nth-child(even){
background: #f1f1f1;
}
